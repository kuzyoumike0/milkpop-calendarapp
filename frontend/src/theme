// theme 設定
const theme = extendTheme({
  styles: {
    global: {
      body: {
        // Chakra がデフォルトで白を入れるので上書き
        bg: "transparent",   // ← 背景は CSS に任せる
        color: "#333",       // デフォルト文字色
        margin: 0,
        fontFamily: "'Helvetica Neue', Arial, sans-serif",
        minHeight: "100vh",
      },
      "#root": {
        background: "transparent", // root要素も白塗りされないように
      },
    },
  },
});
